<% semantic_form_for(@session) do |f| %>

  <%= f.error_messages %>
  
  <% f.inputs do %>
    <%= f.input :title %>
    <%= f.input :description, :hint => 'You can use <a href="http://daringfireball.net/projects/markdown/syntax">Markdown</a> syntax here. Examples: <strong>**bold**</strong>, <em>*italic*</em>, [link](http://example.com)' %>

    <% if !logged_in? %>
     <%= f.input :name, :label => 'Your name', :hint => "Please use your real name. This will be used in our printed materials." %>
     <%= f.input :email, :label => 'Your email', :hint => "Please use a real email address. We need this to contact you about your presentation." %>
    <% end %>

    <%= f.input :categories, :as => :check_boxes %>

    <%= f.input :panel, :label => 'This is a panel discussion' %>
    <%= f.input :projector, :label => 'I need a projector' %>
  <% end %>

  <%= recaptcha_tags.html_safe %>
  
  <%= f.buttons %>
<% end %>
