<% title(@session.title) %>
<% content_for :edit do %>
  <% edit(@session) do %>
    (<%= link_to 'edit', edit_session_path(@session) %>)
  <% end %>
<% end %>

<p>By <%= link_to @session.participant.name, @session.participant %></p>


<div class="row">
  <div class="column grid_6" style="margin-left:0px">

    <div>
      <%= markdown(@session.description).html_safe! %>
    </div>

    <h3>Categories</h3>

    <ul>
      <%= render :partial => 'category', :collection => @session.categories %>
    </ul>

 </div>

  <div class="column grid_4">
    <div id="interested-in-attending" class="sidebar-box">

      <% if !@session.attending?(current_participant) %>
        <h3>Interested in this session?</h3>
  
        <p><%= link_to 'Attend this session', '#', :id => 'attend' %></p>

        <p>This will add your name to the list of interested participants. You do not have to attend, but it will help us guage interest for scheduling purposes.</p>
      <% end %>

      <h3>Participants</h3>

      <% if @session.participants.empty? %>
        <div id="no-participants">
          No one has expressed interest in attending this session yet. Be the first!
        </div>
      <% end %>

      <ul id="participants">
        <%= render :partial => 'participant', :collection => @session.participants %>
      </ul>
    </div>
  </div>
</div>
